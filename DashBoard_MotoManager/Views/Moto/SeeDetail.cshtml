@model DashBoard_MotoManager.Models.MotoVM
@{
    ViewData["Title"] = "SeeDetail";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

<style>
    td{
        color:black;
    }
</style>

<div class="col-sm-12">
    <div class="bg-light shadow rounded h-100 p-4" style="margin:25px">
        <h6 class="mb-4">Chi Tiết Xe</h6>
    
        <!-- navtab start -->
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill"
                        data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home"
                        aria-selected="true">
                    Thông tin chung
                </button>
            </li>
        </ul>
        <!-- navtab end -->
        <!-- content start-->
        <div class="tab-content" id="pills-tabContent">
            <!-- Thông Tin Chung start-->       
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <div> 
                    <div class="row g-4">
                        <div class="col-sm-12 col-xl-6">
                            <div class="bg-light rounded h-100 p-4">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <td colspan="2">
                                                <div class="text-center">
                                                    <h3>Thông Tin Chung</h3>
                                                </div>  
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><h4>Tên Xe</h4></td>
                                            <td><h3>@Model.TenXe</h3></td>
                                        </tr>
                                        <tr> 
                                            <td colspan="2">
                                                <div class="text-center">
                                                    <img width="200px" height="auto" src=~/img/Mota/@Model.AnhMoTaUrl class="rounded" alt="anh">
                                                    <p>@Model.AnhMoTaUrl</p>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Giá Bán Từ</td>
                                            <td>@Model.GiaBanMoTa</td>                         
                                        </tr>
                                        <tr>
                                            <td>Hãng Sản Xuất</td>
                                            <td>@Model.MaHangSanXuatNavigation.TenHangSanXuat</td>
                                        </tr>
                                        <tr>
                                            <td>Loại Xe</td>
                                            <td>@Model.MaLoaiNavigation.TenLoai</td>
                                        </tr>
                                        <tr>
                                            <td>Thiết kế</td>
                                            <td>@Model.ThietKe</td>
                                        </tr>
                                        <tr>
                                            <td>Tính năng nổi bật</td>
                                            <td>@Model.TinhNangNoiBat</td>
                                        </tr>
                                        <tr>
                                            <td>Tiện Ích</td>
                                            <td>@Model.TienIch</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>  
                        </div>
                        <div class="col-sm-12 col-xl-6">
                            <div class="bg-light rounded h-100 p-4">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <td colspan="2">
                                                <div class="text-center">
                                                    <h3>Thông Số Kỹ Thuật</h3>
                                                </div>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Trọng Lượng</td>
                                            <td><h3>@Model.TrongLuong</h3></td>
                                        </tr> 
                                        <tr>
                                            <td>Kích Thước</td>
                                            <td>@Model.KichThuoc</td>
                                        </tr>
                                        <tr>
                                            <td>Khoảng Cách Trục Bánh Xe</td>
                                            <td>@Model.KhoangCachTrucBanhXe</td>
                                        </tr>
                                        <tr>
                                            <td>Độ cao yên</td>
                                            <td>@Model.DoCaoYen</td>
                                        </tr>
                                        <tr>
                                            <td>Độ cao gầm xe</td>
                                            <td>@Model.DoCaoGamXe</td>
                                        </tr>
                                        <tr>
                                            <td>Dung tích bình xăng</td>
                                            <td>@Model.DungTichBinhXang</td>
                                        </tr>
                                        <tr>
                                            <td>Kích cỡ lốp trước/ sau</td>
                                            <td>@Model.KichCoLop</td>
                                        </tr>
                                        <tr>
                                            <td>Phuộc trước</td>
                                            <td>@Model.PhuocTruoc</td>
                                        </tr>
                                        <tr>
                                            <td>Phuộc sau</td>
                                            <td>@Model.PhuocSau</td>
                                        <tr>
                                            <td>Loại động cơ</td>
                                            <td>@Model.LoaiDongCo</td>
                                        </tr>
                                        <tr>
                                            <td>Công suất tối đa</td>
                                            <td>@Model.CongSuatToiDa</td>
                                        </tr>
                                        <tr>
                                            <td>Công suất tối đa</td>
                                            <td>@Model.CongSuatToiDa</td>
                                        </tr>
                                        <tr>
                                            <td>Mức tiêu thụ nhiên liệu</td>
                                            <td>@Model.MucTieuThuNhienLieu</td>
                                        </tr>
                                        <tr>
                                            <td>Hệ thống khởi động</td>
                                            <td>@Model.HeThongKhoiDong</td>
                                        </tr>
                                        <tr>
                                            <td>Moment cực đại</td>
                                            <td>@Model.MomentCucDai</td>
                                        </tr>
                                        <tr>
                                            <td>Dung tích xy-lanh</td>
                                            <td>@Model.DungTichXyLanh</td>
                                        </tr>
                                        <tr>
                                            <td>Đường kính x Hành trình pít tông</td>
                                            <td>@Model.DuongKinhHanhTrinhPittong</td>
                                        </tr>
                                        <tr>
                                            <td>Tỷ số nén</td>
                                            <td>@Model.TySoNen</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <h3>Thư Viện Ảnh</h3>
                            <div class="row g-4">
                                @if (Model.MaLibraryNavigation != null)
                                {       
                                    @foreach (var img in Model.MaLibraryNavigation.LibraryImageVM)
                                    {   
                                        <div class="col-sm-12 col-xl-6">
                                            <img width="700px" height="auto" src="~/img/LibraryImgs/@img.ImageUrl" class="rounded" alt="anh">
                                            <p class="text-center">@img.ImageUrl</p>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>

                    
                </div>
            </div>
            <!-- Thông Tin Chung End--> 

        </div>
        <!-- Content end-->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/chart/chart.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</div>

